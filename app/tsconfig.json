{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES6",
      "ES2017",
      "ES2018",
      "ES2019"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "componentLibrary/*": [
        "componentLibrary/*"
      ],
      "controllers/*": [
        "controllers/*"
      ],
      "common/*": [
        "common/*"
      ],
      "pages/*": [
        "pages/*"
      ],
      "store/*": [
        "store/*"
      ],
      "routes/*": [
        "routes/*"
      ],
      "layouts/*": [
        "layouts/*"
      ],
      "analyticsEvents/*": [
        "components/main/analytics/events/ga4Events/*"
      ]
    },
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.*",
    "**/*.spec.*",
    "localization"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}